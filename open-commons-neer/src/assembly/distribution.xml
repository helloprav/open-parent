<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
	<id>distribution</id>
	<formats>
		<!-- <format>tar</format> -->
		<!-- <format>zip</format> -->
		<format>dir</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${basedir}</directory>
			<includes>
				<include>*.txt</include>
			</includes>
			<excludes>
				<exclude>README.txt</exclude>
				<exclude>NOTICE.txt</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>src/bin</directory>
			<outputDirectory>bin</outputDirectory>
			<includes>
				<include>db-*.bat</include>
				<include>ofds-*.bat</include>
				<include>*.properties</include>
				<include>*.sql</include>
				<include>openMySqlConsole.bat</include>
				<include>ReadMe.txt</include>
			</includes>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>externalPath</outputDirectory>
			<includes>
				<include>env/dev/**</include>
				<include>env/prod/**</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>config</outputDirectory>
			<includes>
				<include>cmnTemplate/**</include>
				<include>*.properties</include>
				<include>*.sql</include>
				<include>*.xml</include>
				<include>*.yml</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target</directory>
			<outputDirectory>lib</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>logs</outputDirectory>
			<fileMode>0755</fileMode>
			<excludes>
				<exclude>**/*</exclude>
			</excludes>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>README.txt</source>
			<outputDirectory></outputDirectory>
			<filtered>true</filtered>
		</file>
		<!-- <file>
			<source>NOTICE.txt</source>
			<outputDirectory>/</outputDirectory>
			<filtered>true</filtered>
		</file> -->
	</files>
</assembly>